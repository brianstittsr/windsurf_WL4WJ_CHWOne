# CHWOne Environment Configuration Template
# Copy this file to .env.local and configure your values

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

# AWS Region (where your services are deployed)
NEXT_PUBLIC_AWS_REGION=us-east-1

# AWS Credentials (DO NOT commit these to version control)
# Get these from AWS IAM Console or AWS CLI configuration
NEXT_PUBLIC_AWS_ACCESS_KEY_ID=your-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-secret-access-key-here

# AWS Cognito Configuration
# These will be generated by the CDK deployment
NEXT_PUBLIC_USER_POOL_ID=us-east-1_XXXXXXXXX
NEXT_PUBLIC_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXX
NEXT_PUBLIC_IDENTITY_POOL_ID=us-east-1:XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# AWS API Gateway Configuration
NEXT_PUBLIC_API_ENDPOINT=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod

# AWS S3 Configuration
NEXT_PUBLIC_AWS_S3_BUCKET=chwone-files

# ============================================================================
# INTEGRATION API KEYS (Optional)
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
NEXT_PUBLIC_OPENAI_MODEL=gpt-4

# 3CX Phone System
THREECX_API_KEY=your-3cx-api-key-here
THREECX_BASE_URL=https://your-3cx-server.com

# EmpowerUS
EMPOWERUS_API_KEY=your-empowerus-api-key-here
EMPOWERUS_BASE_URL=https://api.empowerus.com

# Google Services
GOOGLE_DOCS_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_DOCS_CLIENT_SECRET=your-google-client-secret
GOOGLE_DOCS_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Facebook Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Zoom Integration
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_WEBHOOK_SECRET_TOKEN=your-zoom-webhook-secret

# IMAP Email Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=your-email@gmail.com
IMAP_PASSWORD=your-app-password

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_ENVIRONMENT=production

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=26214400  # 25MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx,txt

# QR Code Configuration
NEXT_PUBLIC_QR_CODE_ENABLED=true

# Analytics Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT and Session Configuration
JWT_SECRET=your-super-secure-jwt-secret-here
SESSION_TIMEOUT=28800  # 8 hours in seconds

# CORS Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Content Security Policy
CSP_DEFAULT_SRC=self
CSP_SCRIPT_SRC=self 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC=self 'unsafe-inline'
CSP_IMG_SRC=self data: https:
CSP_FONT_SRC=self https://fonts.gstatic.com
CSP_CONNECT_SRC=self https://api.yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION (For local development)
# ============================================================================

# Local DynamoDB (for development only)
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# AWS CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/chwone/application
CLOUDWATCH_LOG_STREAM=application-logs

# Error Reporting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# S3 Backup Configuration
BACKUP_BUCKET=chwone-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM UTC

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_QR_CODES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_INTEGRATIONS=true
NEXT_PUBLIC_ENABLE_PUBLIC_FORMS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Amazon SES Configuration (if using SES instead of other providers)
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

# SMTP Configuration (alternative to SES)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# CloudFront Distribution ID (for cache invalidation)
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# Stripe Configuration (for payments if needed)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Slack Integration (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#chwone-notifications

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Debug Mode
NEXT_PUBLIC_DEBUG=false
DEBUG_LOG_LEVEL=info

# Local Development URLs
NEXT_PUBLIC_LOCAL_API_URL=http://localhost:3000/api
NEXT_PUBLIC_LOCAL_S3_URL=http://localhost:4569  # LocalStack S3

# ============================================================================
# COMPLIANCE & REGULATORY
# ============================================================================

# HIPAA Compliance Settings
HIPAA_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA
AUDIT_LOG_ENABLED=true

# GDPR Compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_PROCESSING_AGREEMENT_URL=https://yourdomain.com/gdpr
COOKIE_CONSENT_ENABLED=true

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_SIZES=640,750,828,1080,1200,1920,2048,3840

# CDN Configuration
CDN_URL=https://your-cdn-domain.cloudfront.net
CDN_ENABLED=true

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# ============================================================================
# NOTIFICATION TEMPLATES
# ============================================================================

# Email Templates
WELCOME_EMAIL_TEMPLATE_ID=template_welcome
FORM_SUBMISSION_TEMPLATE_ID=template_submission
PASSWORD_RESET_TEMPLATE_ID=template_reset

# SMS Templates
SMS_APPOINTMENT_TEMPLATE=Your appointment is scheduled for {{date}} at {{time}}
SMS_MEDICATION_TEMPLATE=Time to take your {{medication}}

# ============================================================================
# RATE LIMITING
# ============================================================================

# API Rate Limits
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=15  # minutes

# File Upload Limits
FILE_UPLOAD_RATE_LIMIT=10  # files per minute per user

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

# Authentication Provider (default: firebase, options: firebase, cognito)
NEXT_PUBLIC_AUTH_PROVIDER=firebase

# ============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# ============================================================================

# Production overrides
if [ "$NODE_ENV" = "production" ]; then
    NEXT_PUBLIC_ENABLE_DEBUG=false
    CACHE_ENABLED=true
    CDN_ENABLED=true
fi

# Staging overrides
if [ "$NODE_ENV" = "staging" ]; then
    NEXT_PUBLIC_ENVIRONMENT=staging
    DEBUG_LOG_LEVEL=debug
fi

# Development overrides
if [ "$NODE_ENV" = "development" ]; then
    NEXT_PUBLIC_ENVIRONMENT=development
    NEXT_PUBLIC_DEBUG=true
    DEBUG_LOG_LEVEL=debug
fi
